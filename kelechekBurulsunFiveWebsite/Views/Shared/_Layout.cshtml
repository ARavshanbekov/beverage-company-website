@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@Localizer["website language"]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="Description" content="@Localizer["website description"]">
    <title>@ViewData["Title"] - @Localizer["company name"]</title>

    <link rel="alternate" href="https://www.kelechek27.com/en" hreflang="en" />

    <link rel="alternate" href="https://www.kelechek27.com/ru" hreflang="ru" />

    <link rel="alternate" href="https://www.kelechek27.com/tr" hreflang="tr" />

    <link rel="alternate" href="https://www.kelechek27.com/ky" hreflang="ky" />

    <link rel="alternate" href="https://www.kelechek27.com" hreflang="x-default" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/msdropdown/dd.css" rel="stylesheet" />
    <link href="~/css/msdropdown/flags.css" rel="stylesheet" />

    <style>
        body {
            height: 100%;
        }

        #header img {
            width: 32px;
            height: 32px;
        }
    </style>
</head>
<body>
    <header id="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
            <div class="container">
                @{ string lang = Localizer.GetString("lang address"); }
                <a class="navbar-brand bg-white p-1 rounded pr-2" asp-area="" asp-controller="@lang" asp-action="Index">
                    <img src="~/images/kelechekCompanyLogo.webp" style="background-size:48px;" />
                    <b class="text-danger">@Localizer["only company name"]</b>
                </a>
                
                <button class="navbar-toggler border-danger" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex flex-lg-row-reverse">

                    <ul class="navbar-nav flex-grow-1 justify-content-end text-center">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="@lang" asp-action="OurProducts">@Localizer["our products"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light btn btn-outline-dark border border-danger" asp-area="" asp-controller="@lang" asp-action="Contact">@Localizer["contact us"]</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/msdropdown/jquery.dd.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <div>
        <main role="main">
            @RenderBody()              
        </main>
    </div>

    <footer class="border-top bg-dark text-light">
        <div class="container">                        
            <div class="row pt-4">
                <div class="col-md justify-content-center text-center">
                    <h4>@Localizer["social connections"]</h4>
                    <a href="https://www.facebook.com/Kelechek2020" class="d-inline d-md-block"><i class="fa fa-facebook-official" style="font-size:48px; color: #4267B2;" aria-hidden="true"></i><p class="my-auto d-inline">Facebook</p></a>
                    <a href="https://www.instagram.com/zao.kelechek/" class="d-inline d-md-block"><i class="fa fa-instagram" style="font-size:48px; color: #F56040;" aria-hidden="true"></i> <p class="my-auto d-inline">Instagram</p></a>
                </div>
                <div class="col-md justify-content-center text-center">
                    <h4>@Localizer["pages"]</h4>
                    <a class="p-2 text-danger d-block" asp-area="" asp-controller="@lang" asp-action="Index"><u>@Localizer["start page"]</u></a>
                    <a class="p-2 text-danger d-block" asp-area="" asp-controller="@lang" asp-action="OurProducts"><u>@Localizer["our products"]</u></a>
                    <a class="p-2 text-danger d-block" asp-area="" asp-controller="@lang" asp-action="Contact"><u>@Localizer["contact us"]</u></a>
                </div>
                <div class="col-md">
                    <h4 class="text-center">@Localizer["contact lines"]</h4>
                    <div class="row">
                        <div class="col-2 p-2">
                            <i class="fa fa-phone" style="font-size:48px;" aria-hidden="true"></i>
                        </div>
                        <div class="col">
                            <h3>@Localizer["phone number"]</h3>
                            <a href="tel:+996776707009" class="text-danger">+996 (776) 70-70-09</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2 p-2">
                            <i class="fa fa-envelope" style="font-size:48px;"></i>
                        </div>
                        <div class="col">
                            <h3>@Localizer["email"]</h3>
                            <a href="mailto:kelechek2020@rambler.ru" class="text-danger">kelechek2020@rambler.ru</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row border-top pb-1">
                <div class="col-md pt-3">
                    <span class="text-left">@await Html.PartialAsync("_SelectLanguagePartial")</span>
                </div>
                <div class="col-md text-center p-3">
                    @Localizer["copyright part"]
                </div>
            </div>
        </div>
    </footer>

    <script>
        let $btn = $('#header');

        $(window).scroll(function () {

            if ($(window).scrollTop() > 300) {
                if ((window.innerWidth >= 800) && (window.innerHeight >= 600)) {
                    $btn.css("-ms-filter", "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)");
                    $btn.css("filter", "alpha(opacity = 100);");
                    $btn.css("-moz-opacity", "1");
                    $btn.css("-khtml-opacity", "1");
                    $btn.css("opacity", "1");
                } else {

                    $btn.css("-ms-filter", "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)");
                    $btn.css("filter", "alpha(opacity = 0);");
                    $btn.css("-moz-opacity", "0");
                    $btn.css("-khtml-opacity", "0");
                    $btn.css("opacity", "0");

                }
            } else {
                $btn.css("-ms-filter", "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)");
                $btn.css("filter", "alpha(opacity = 100);");
                $btn.css("-moz-opacity", "1");
                $btn.css("-khtml-opacity", "1");
                $btn.css("opacity", "0.8");
            }

        });
    </script>

    <script>
        $(document).ready(function () {
            $("#countries").msDropdown();
        })
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
