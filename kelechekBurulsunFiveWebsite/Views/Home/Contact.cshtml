<div class="row m-0 pt-3 pb-3" style="background-color: #f7f7f7;">
    <div class="col-md-3"></div>
    <div class="col col-md-6">
        <form id="frmSendMessage" method="get">
            <h3 class="pl-3">Оставить сообщение</h3>
            <div class="form-row p-3">
                <input type="text" class="form-control" id="txtName" name="txtName" placeholder="Имя и фамилия" required>
            </div>
            <div class="form-row p-3">
                <input type="text" class="form-control" id="txtEmail" name="txtEmail" placeholder="Эл. адрес" required>
            </div>
            <div class="form-row p-3">
                <input type="text" class="form-control" id="txtTheme" name="txtTheme" placeholder="Тема" required>
            </div>
            <div class="form-row p-3">
                <textarea class="form-control" id="txtMessage" name="txtMessage" placeholder="Сообщение" required></textarea>
            </div>
            <div class="form-row p-3">
                <button id="btnSubmitMessage" class="btn btn-danger w-100 justify-content-center" type="submit">
                    Послать
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

