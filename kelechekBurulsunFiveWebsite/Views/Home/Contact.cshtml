    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD6ZtDc_Uz617sMSw5q1qrQpivSaThl_Tc&callback=initMap&libraries=&v=weekly"
        defer></script>
<style type="text/css">
    /* Optional: Makes the sample page fill the window. */
    html,
    body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    #header {
        position: relative;
    }
</style>
<script>
    "use strict";

    function initMap() {
        const myLatLng = {
            lat: 40.939160,
            lng: 72.985850,
        };
        const map = new google.maps.Map(document.getElementById("map"), {
            zoom: 14,
            center: myLatLng,
        });
        var infowindow = new google.maps.InfoWindow({
            content: 'Компания Келечек ЗАО'
        });
        var marker = new google.maps.Marker({
            position: myLatLng,
            map,
            title: "Компания Келечек"
        });
        infowindow.open(map, marker);
    }
</script>

<div id="map" class="w-100" style="height: 70vh;"></div>

<div class="row mx-auto pl-3 pr-3 pt-5 pb-5 w-100">
    <div class="col-md">
